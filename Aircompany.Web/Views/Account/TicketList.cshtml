@using Aircompany.DataAccess.Enums
@using Aircompany.Web.Models.Booking

@model List<TicketViewModel>

@if (Model.Count > 0)
{
    foreach (TicketViewModel ticket in Model)
    {
        string panelClass;
        string type;
        switch (ticket.Seat.Type)
        {
            case (int) SeatType.Econom:
                type = SeatType.Econom.ToString();
                panelClass = "panel-primary";
                break;
            case (int) SeatType.Business:
                type = SeatType.Business.ToString();
                panelClass = "panel-info";
                break;
            case (int) SeatType.First:
                type = SeatType.First.ToString();
                panelClass = "panel-danger";
                break;
            default:
                type = "undefined";
                panelClass = "panel-default";
                break;
        }
        <div class="col-sm-6">
            <div class="panel @panelClass">
                <div class="panel-heading text-center">
                    <strong>Ticket</strong>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>Flight: @ticket.Code</h3>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-sm-12">
                            <b>Departure airport:</b> @ticket.DepartureAirportCode, @ticket.DepartureAirportCity, @ticket.DepartureAirportCountry
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <b>Ariving airport:</b> @ticket.ArivingAirportCode, @ticket.ArivingAirportCity, @ticket.ArivingAirportCountry
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <b>Departure date:</b> @ticket.DepartureDate
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <b>Ariving date:</b> @ticket.ArivingDate
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <b>Plane model:</b> @ticket.PlaneModel
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-sm-6">
                            <b>Hand luggage:</b> @ticket.HandLuggage kg.
                        </div>
                        <div class="col-sm-6">
                            <b>Luggage:</b> @ticket.Luggage kg.
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-sm-4">
                            <b>Class:</b> @type
                        </div>
                        <div class="col-sm-4">
                            <b>Place:</b> @ticket.Seat.Place
                        </div>
                        <div class="col-sm-4">
                            <b>Row:</b> @ticket.Seat.Row
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <strong>Price:</strong> @string.Format("{0:0.00}", ticket.Price) (UAH)
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <h3>There are no tickets!</h3>
        </div>
    </div>
}
