@model Aircompany.Web.Models.Flight.FlightDetailsViewModel

@{
    ViewBag.Title = "Details";
}
<br>
<div class="jumbotron">
    <h1 class="text-center">@Model.FlightCode</h1>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.FlightCode)
                @Model.FlightCode
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.DepartureAirportCode)
                @Model.DepartureAirportCode
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.ArivingAirportCode)
                @Model.ArivingAirportCode
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.DepartureDateTime)
                @Model.DepartureDateTime
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.ArivingDateTime)
                @Model.ArivingDateTime
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.DepartureAirportName)
                @Model.DepartureAirportName
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.DepartureAirportCity)
                @Model.DepartureAirportCity
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.DepartureAirportCountry)
                @Model.DepartureAirportCountry
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.ArivingAirportName)
                @Model.ArivingAirportName
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.ArivingAirportCity)
                @Model.ArivingAirportCity
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.ArivingAirportCountry)
                @Model.ArivingAirportCountry
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-sm-4">
                <button onclick="location.href = '@Url.Action("SelectSeats", "Booking", new { id = Model.FlightId})'" class="btn btn-primary" type="button"><span class="glyphicon glyphicon-tags"></span> Book tickets</button>
            </div>
        </div>
        <hr/>
